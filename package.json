{
  "name": "vsts-developer-tools",
  "version": "6.0.0-alpha.1",
  "description": "Azure DevOps Extension Tasks",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/azure-devops-extension-tasks.git"
  },
  "keywords": [
    "azure-devops",
    "azure-pipelines",
    "vsts",
    "tfs"
  ],
  "workspaces": [
    "packages/core",
    "packages/azdo-task",
    "packages/github-action"
  ],
  "scripts": {
    "initdev": "npm run initdev:npm",
    "initdev:npm": "npm run initdev:npm:base & npm run initdev:npm:tasks",
    "initdev:npm:base": "npm install --no-progress --force --no-update-notifier --legacy-peer-deps --no-fund",
    "initdev:npm:tasks": "glob-exec --parallel --foreach \"BuildTasks/*/tsconfig.json\" -- \"cd {{file.dir}} && npm install --force --no-update-notifier --no-progress --legacy-peer-deps --no-fund\"",
    "compile:tasks": "npm run compile:tasks:v5",
    "compile:tasks:v5": "glob-exec \"BuildTasks/*/tsconfig.json\" -- \"tsc -b {{files.join(' ')}}\"",
    "postcompile:tasks": "npm run lint:tasks",
    "lint:tasks": "npm run lint:tasks:v5",
    "lint:tasks:v5": "glob-exec --parallel --foreach \"BuildTasks/*/tsconfig.json\" -- \"eslint {{file.dir}}\\*.ts --parser-options \"{'project':['{{file}}']}\"",
    "package:tasks": "tfx extension create --root . --output-path dist --manifest-globs vss-extension.json",
    "build": "npm run build:tasks && npm run build:v6",
    "build:v6": "npm run build -ws --if-present",
    "build:clean": "npm run clean && npm run initdev && npm run build",
    "build:tasks": "npm run compile:tasks",
    "package": "glob-exec --parallel --foreach \"BuildTasks/*/tsconfig.json\" -- \"cd {{file.dir}} && npm dedupe && npm prune --omit=dev\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --no-coverage",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "bundle": "npm run bundle -ws --if-present",
    "clean": "git clean -fdX"
  },
  "author": "Microsoft Corporation",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-commonjs": "^28.0.5",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.33",
    "@types/promise-retry": "^1.1.6",
    "@types/q": "^1.5.8",
    "@types/xmldom": "^0.1.34",
    "@types/yauzl": "^2.10.3",
    "@types/yazl": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@ungap/structured-clone": "^1.3.0",
    "azure-devops-node-api": "^14.1.0",
    "eslint": "^9.39.2",
    "glob-exec": "^0.1.1",
    "globals": "^17.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rollup": "^4.31.0",
    "tfx-cli": "^0.23.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "yauzl": "^3.2.0",
    "yazl": "^3.3.1"
  }
}
