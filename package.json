{
  "name": "vsts-developer-tools",
  "version": "6.0.0-alpha.1",
  "description": "Azure DevOps Extension Tasks",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/azure-devops-extension-tasks.git"
  },
  "keywords": [
    "azure-devops",
    "azure-pipelines",
    "vsts",
    "tfs"
  ],
  "workspaces": [
    "packages/core",
    "packages/azdo-task",
    "packages/github-action"
  ],
  "scripts": {
    "initdev": "npm install --no-progress --force --no-update-notifier --legacy-peer-deps --no-fund",
    "build": "npm run build -ws --if-present",
    "build:clean": "npm run clean && npm run initdev && npm run build",
    "package:tasks": "tfx extension create --root . --output-path dist --manifest-globs vss-extension.json",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --no-coverage",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "bundle": "node Scripts/bundle.mjs",
    "clean": "git clean -fdX"
  },
  "author": "Microsoft Corporation",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.33",
    "@types/yauzl": "^2.10.3",
    "@types/yazl": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "azure-devops-node-api": "^14.1.0",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "tfx-cli": "^0.23.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "yauzl": "^3.2.0",
    "yazl": "^3.3.1"
  }
}
