{
  "name": "azdo-extension-tasks",
  "version": "6.0.0-alpha.1",
  "description": "Azure DevOps Extension Tasks",
  "repository": {
    "type": "git",
    "url": "https://github.com/jessehouwing/azure-devops-extension-tasks.git"
  },
  "keywords": [
    "azure-devops",
    "azure-pipelines",
    "vsts",
    "tfs"
  ],
  "workspaces": [
    "packages/core",
    "packages/azdo-task",
    "packages/github-action"
  ],
  "scripts": {
    "initdev": "npm install --no-progress --force --no-update-notifier --legacy-peer-deps --no-fund",
    "build": "npm run build --workspaces --if-present",
    "build:clean": "npm run clean && npm run initdev && npm run build",
    "package:tasks": "tfx extension create --root . --output-path dist --manifest-globs vss-extension.json",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --no-coverage",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "bundle": "node Scripts/bundle.mjs",
    "setup:windows:path": "powershell -NoProfile -ExecutionPolicy Bypass -File ./Scripts/setup-windows-path.ps1",
    "clean": "git clean -fdX"
  },
  "author": "Jesse Houwing",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/yauzl": "^2.10.3",
    "@types/yazl": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "esbuild": "^0.27.3",
    "eslint": "^9",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "tfx-cli": "^0.23.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "yauzl": "^3.2.0",
    "yazl": "^3.3.1"
  }
}
